@model Sign_Up_Model

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE" crossorigin="anonymous"></script>

<form method="post" class="needs-validation" novalidate>
    <div class="container no-padding">
        <div class="row text-start fixed-title justify-content-sm-end">
            <div class="col">
                <p class="title FiraSans-light-font">
                    Sign Up
                </p>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-success fixed-button"> Sign Up </button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="FiraSans-font fixed-margin"> First Name:</p>
                <div class="form-floating fixed-margin input-fixed-width">
                    <input type="text" class="form-control" id="name" placeholder=" " asp-for="UserName" required />
                    <label class="FiraSans-light-font fixed-labels" for="name">
                        First Name
                    </label>
                    <div class="invalid-tooltip">
                        Provide a First Name
                    </div>
                </div>
                <p class="FiraSans-font fixed-margin"> Last Name:</p>
                <div class="form-floating fixed-margin input-fixed-width">
                    <input type="text" class="form-control" id="lastName" placeholder=" " asp-for="UserLastName" required />
                    <label class="FiraSans-light-font fixed-labels" for="lastName">
                        Last Name
                    </label>
                    <div class="invalid-tooltip">
                        Provide a Last Name
                    </div>
                </div>
                <p class="FiraSans-font fixed-margin">Phone Number:</p>
                <div class="form-floating fixed-margin input-fixed-width">
                    <input type="text" class="form-control" id="phoneNumber" placeholder=" " asp-for="UserPhoneNumber" required />
                    <label class="FiraSans-light-font fixed-labels" for="phoneNumber">
                        Phone Number
                    </label>
                    <div class="invalid-tooltip">
                        Provide a Phone Number
                    </div>
                </div>
            </div>
            <div class="col">
                <p class="FiraSans-font fixed-margin-1"> Email Address:</p>
                <div class="form-floating fixed-margin-1 input-fixed-width">
                    <input type="email" class="form-control" id="email" placeholder=" " asp-for="UserEmailAddress" required />
                    <label class="FiraSans-light-font fixed-labels-1" for="email">
                        Email Address
                    </label>
                    <div class="invalid-tooltip">
                        Provide a Valid Email Address
                    </div>
                </div>
                <p class="FiraSans-font fixed-margin-1"> Password:</p>
                <div class="input-group mb-3 form-floating fixed-margin-1 input-fixed-width">
                    <input type="password" class="form-control password" id="password" placeholder=" " asp-for="Password" required />
                    <span class="input-group-text togglePassword" id="">
                        <i data-feather="eye" style="cursor: pointer"></i>
                    </span>
                    <label class="FiraSans-light-font fixed-labels-1" for="password">
                        Password
                    </label>
                    <div class="invalid-tooltip">
                        Provide a Password
                    </div>
                </div>
                <p class="FiraSans-font fixed-margin-1"> Confirm Password:</p>
                @if (!Model.IsPasswordConfirmed)
                {
                    <div class="form-floating fixed-margin-1 input-fixed-width was-validated">
                        <input type="password" class="form-control" id="password_confirm" placeholder=" " asp-for="PasswordConfirm" required />
                        <label class="FiraSans-light-font fixed-labels-1" for="password_confirm">
                            Confirm Password
                        </label>
                        <div class="invalid-tooltip">
                            Password does not match
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-floating fixed-margin-1 input-fixed-width">
                        <input type="password" class="form-control" id="password_confirm" placeholder=" " asp-for="PasswordConfirm" required />

                        <label class="FiraSans-light-font fixed-labels-1" for="password_confirm">
                            Confirm Password
                        </label>
                        <div class="invalid-tooltip">
                            Password does not match
                        </div>
                    </div>
                }
                <div>
                    <p class="FiraSans-font fixed-link">
                        Alredy Have An Account?
                        <a class="FiraSans-font text-primary" asp-area="" asp-controller="Sign_In" asp-action="Sign_In"> Sign In</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>