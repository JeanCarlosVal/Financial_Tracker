@model RecordModel

@{
    Layout = "User_Home_Layout.cshtml";
}

@section Title{
    <p class="m-0 link-font-size FiraSans-light-font">Activity</p>
}

    @if (Model.Success == true)
{
    <div class="success content-animation">
        <div class="container alert alert-success fade show shadow-lg success-msg">
            Succsesfully stored new Activity
        </div>
    </div>
}

@if(Model.Error == true)
{
    <div class="error content-animation">
        <div class="container alert alert-danger fade show shadow-lg error-msg">
            It looks like you haven't signed in yet! Sign In and try again.
        </div>
    </div>
}

<form method="post" class="needs-validation" novalidate>
    <div class="new-activity shadow-lg rounded-5 content-animation form-background">
        <div class="row activity-div">
            <p class="FiraSans-font"> Activity Name:</p>
            <div class="form-floating">
                <input type="text" class="form-control" id="ActivityName" placeholder=" " asp-for="ActivityName" required />
                <label class="FiraSans-light-font fixed-labels-1" for="ActivityName">
                    Activity Name
                </label>
                <div class="invalid-tooltip">
                    Provide a Name for the Activity
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="activity-div">
                    <p class="FiraSans-font"> Activity Cost:</p>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="ActivityCost" onkeypress="return isNumberKey(event)" asp-for="ActivityCost" required />
                        <label class="FiraSans-light-font fixed-labels-1" for="ActivityCost">
                            Activity Cost
                        </label>
                        <div class="invalid-tooltip">
                            Provide a Cost for the Activity
                        </div>
                    </div>
                </div>
                <div class="activity-div">
                    <p class="FiraSans-font"> Activity Type:</p>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="ActivityType" placeholder=" " asp-for="ActivityType" required />
                        <label class="FiraSans-light-font fixed-labels-1" for="ActivityType">
                            Activity Type
                        </label>
                        <div class="invalid-tooltip">
                            Provide a Type for the Activity
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="activity-div">
                    <p class="FiraSans-font"> Activity Date:</p>
                    <div class="form-floating">
                        <input type="datetime-local" class="form-control" id="ActivityDate" placeholder=" " asp-for="ActivityDate" required />
                        <label class="FiraSans-light-font fixed-labels-1" for="ActivityDate">
                            Activity Date
                        </label>
                        <div class="invalid-tooltip">
                            Provide a Date for the Activity
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row activity-div">
            <button type="submit" class="btn btn-success activity-button button-background FiraSans-font"> Record Activty </button>
        </div>
    </div>
</form>
